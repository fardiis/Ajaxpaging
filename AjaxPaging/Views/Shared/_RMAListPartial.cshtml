@model AjaxPaging.Helper.PagedData<AjaxPaging.Models.BookModel>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.Data)
        {
            <tr>
                <td>
                    @person.Title
                </td>
                <td>
                    @person.Description
                </td>

            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                @for (int i = 1; i <= Model.NumberOfPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        @i
                    }
                    else
                    {
                        <a class="page-number" href="#">@i</a>
                    }
                }
            </td>
        </tr>
    </tfoot>
</table>
